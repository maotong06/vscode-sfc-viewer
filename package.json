{
  "name": "vscode-sfc-viewer",
	"displayName": "vscode-sfc-viewer",
	"description": "vue-viewer react-viewer",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.vscode-sfc-viewer.openVueViewer",
				"title": "view vue sfc"
			},
			{
				"command": "extension.vscode-sfc-viewer.killVueViewer",
				"title": "kill vue sfc"
			},
			{
				"command": "extension.vscode-sfc-viewer.openReactViewer",
				"title": "view react sfc"
			},
			{
				"command": "extension.vscode-sfc-viewer.killReactViewer",
				"title": "kill react sfc"
			}
		],
		"menus": {
      "editor/context": [
        {
          "command": "extension.vscode-sfc-viewer.openVueViewer",
          "group": "2_workspace@vueViewer",
          "when": "resourceLangId == vue"
        },
        {
          "command": "extension.vscode-sfc-viewer.openReactViewer",
          "group": "2_workspace@openReactViewer",
          "when": "resourceLangId == jsx || resourceLangId == javascriptreact || resourceLangId == typescriptreact"
        }
      ],
      "explorer/context": [
        {
          "command": "extension.vscode-sfc-viewer.openVueViewer",
          "group": "2_workspace@vueViewerExplorer",
          "when": "resourceLangId == vue"
        },
        {
          "command": "extension.vscode-sfc-viewer.openReactViewer",
          "group": "2_workspace@reactViewerExplorer",
          "when": "resourceLangId == jsx || resourceLangId == javascriptreact || resourceLangId == typescriptreact"
        }
      ]
    }
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "yarn run compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"eslint": "^7.15.0",
		"@typescript-eslint/eslint-plugin": "^4.9.0",
		"@typescript-eslint/parser": "^4.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.1.2",
		"vscode-test": "^1.4.1"
	}
}
